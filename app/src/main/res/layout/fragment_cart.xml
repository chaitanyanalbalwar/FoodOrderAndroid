<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".Fragments.Cart">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/textview"
        android:text="Your Food Cart"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/textview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/recyclerview"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:hint="Promo Code"
            android:id="@+id/promo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="250dp"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart Total"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="$ 2556.00"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="$ 25.65"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:id="@+id/delevary"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:layout_marginTop="90dp"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="$ 4.65"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/delevary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/total"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTotal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>

    <TextView
        android:layout_marginTop="130dp"
        android:layout_marginLeft="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:text="$2565.00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cart"/>


      <Button
          android:layout_marginTop="50dp"
          android:layout_marginBottom="30dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="30dp"
          android:layout_marginLeft="30dp"
          android:textColor="@color/white"
          android:background="@color/blue"
          android:text="Procced to Checkout"
          android:layout_below="@+id/total"/>


    </RelativeLayout>


</ScrollView>